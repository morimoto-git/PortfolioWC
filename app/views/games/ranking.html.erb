<div class="body">
	<div class="main_contents">

	  <span id="switch_good" class="show_color">いいね数</span>
	  <span id="switch_comment">コメント数</span>

	  <div id="good">
		<table class="table table-hover table-inverse">
		  <thead>
		    <tr>
		      <th>
		      	<h5 class="fas fa-crown"></h5>
		      </th>
		      <th></th>
		      <th><h5>ゲーム</h5></th>
		      <th><h5>投稿者</h5></th>
		      <th>
		      	<h5 class="fas fa-heart" style="color: red;"></h5>
		      </th>
		      <th>
		      	<h5 class="far fa-comment-dots"></h5>
		      </th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @fav_rank.each.with_index(1) do |fav, i| %>
		  	  <tr>
		  	  	<td>
	  	  	  	  <% case i %>
	  	  	  	  <% when 1 %>
	  	  	  	    <div class="first_place">
	  	  	  	      <i class="fas fa-crown"></i>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 2 %>
	  	  	  	    <div class="second_place">
	  	  	  	      <i class="fas fa-crown"></i>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 3 %>
	  	  	  	    <div class="third_place">
	  	  	  	      <i class="fas fa-crown"></i>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% else %>
	  	  	  	    <div class="text-muted">
	  	  	  	      <h5><%= i %></h5>
	  	  	  	    </div>
	  	  	  	  <% end %>
		  	  	</td>
		  	  	<td>
		  	  	  <%= link_to game_path(fav) do %>
		  	  	    <%= attachment_image_tag fav, :main_image, :fit, 220, 165, fallback: "no_image.png", size: "220x165" %>
		  	  	  <% end %>
		  	  	</td>
			    <td>
		  	  	  <%= link_to game_path(fav), class: "text-info" do %>
		  	  	    <h4><%= fav.title %></h4>
		  	  	  <% end %>
		  	  	  <span class="text-muted">
		  	  	  	カテゴリー：<%= fav.category.name %><br>
		            プレイ人数：<%= fav.player %><br>
		            プレイ時間：<%= fav.playing_time %><br>
		            推奨年齢：<%= fav.level %>
		          </span>
			    </td>
		  	  	<td>
			  	  <%= link_to user_path(fav.user), class: "text-info" do %>
			        <%= attachment_image_tag fav.user, :profile_image, :fill, 80, 80, class: "rounded-circle", fallback: "no_icon.png", size: "80x80" %><br>
			        <%= fav.user.name %>
			      <% end %>
		  	  	</td>
		  	  	<td>
				  <h5><%= fav.favorites.count %></h5>
				</td>
				<td>
				  <h5><%= fav.comments.count %></h5>
		  	  	</td>
		  	  </tr>
		  	<% end %>
		  </tbody>
		</table>
	  </div>

	  <div id="comment" class="hidden">
		<table class="table table-hover table-inverse">
		  <thead>
		    <tr>
		      <th>
		      	<h5 class="fas fa-crown"></h5>
		      </th>
		      <th></th>
		      <th><h5>ゲーム</h5></th>
		      <th><h5>投稿者</h5></th>
		      <th>
		      	<h5 class="far fa-comment-dots"></h5>
		      </th>
		      <th>
		      	<h5 class="fas fa-heart" style="color: red;"></h5>
		      </th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @cmt_rank.each.with_index(1) do |cmt, i| %>
		  	  <tr>
		  	  	<td>
	  	  	  	  <% case i %>
	  	  	  	  <% when 1 %>
	  	  	  	    <div class="first_place">
	  	  	  	      <i class="fas fa-crown"></i>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 2 %>
	  	  	  	    <div class="second_place">
	  	  	  	      <i class="fas fa-crown"></i>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 3 %>
	  	  	  	    <div class="third_place">
	  	  	  	      <i class="fas fa-crown"></i>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% else %>
	  	  	  	    <div class="text-muted">
	  	  	  	      <h5><%= i %></h5>
	  	  	  	    </div>
	  	  	  	  <% end %>
		  	  	</td>
		  	  	<td>
		  	  	  <%= link_to game_path(cmt) do %>
		  	  	    <%= attachment_image_tag cmt, :main_image, :fit, 220, 165, fallback: "no_image.png", size: "220x165" %>
		  	  	  <% end %>
		  	  	</td>
			    <td>
		  	  	  <%= link_to game_path(cmt), class: "text-info" do %>
		  	  	    <h4><%= cmt.title %></h4>
		  	  	  <% end %>
		  	  	  <span class="text-muted">
		  	  	  	カテゴリー：<%= cmt.category.name %><br>
		            プレイ人数：<%= cmt.player %><br>
		            プレイ時間：<%= cmt.playing_time %><br>
		            推奨年齢：<%= cmt.level %>
		          </span>
			    </td>
		  	  	<td>
			  	  <%= link_to user_path(cmt.user), class: "text-info" do %>
			        <%= attachment_image_tag cmt.user, :profile_image, :fill, 80, 80, class: "rounded-circle", fallback: "no_icon.png", size: "80x80" %><br>
			        <%= cmt.user.name %>
			      <% end %>
		  	  	</td>
		  	  	<td>
				  <h5><%= cmt.comments.count %></h5>
				</td>
				<td>
				  <h5><%= cmt.favorites.count %></h5>
		  	  	</td>
		  	  </tr>
		  	<% end %>
		  </tbody>
		</table>
	  </div>
	</div>

</div>