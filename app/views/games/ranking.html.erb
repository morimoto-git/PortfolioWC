<div class="body" id="clearfix">
	<div class="main_contents">

	  <div class="good">
	  	<h5 class="text-muted">いいね数</h5>
		<table class="table table-hover table-inverse">
		  <thead>
		    <tr>
		      <th>
		      	<i class="fas fa-crown"></i>
		      </th>
		      <th></th>
		      <th>投稿者</th>
		      <th>ゲーム名</th>
		      <th>
		      	<i class="fas fa-heart" style="color: red;"></i>
		      </th>
		      <th>
		      	<i class="far fa-comment-dots"></i>
		      </th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @fav_rank.each.with_index(1) do |fav, i| %>
		  	  <tr>
		  	  	<td>
	  	  	  	  <% case i %>
	  	  	  	  <% when 1 %>
	  	  	  	    <div class="first_place">
	  	  	  	      <i class="fas fa-crown"></i><br>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 2 %>
	  	  	  	    <div class="second_place">
	  	  	  	      <i class="fas fa-crown"></i><br>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 3 %>
	  	  	  	    <div class="third_place">
	  	  	  	      <i class="fas fa-crown"></i><br>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% else %>
	  	  	  	    <div class="text-muted">
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% end %>
		  	  	</td>
		  	  	<td>
		  	  	  <%= attachment_image_tag fav, :main_image, :fit, 180, 135, fallback: "no_image.png", size: "180x135" %>
		  	  	</td>
			    <td>
			  	  <%= link_to user_path(fav.user), class: "text-info" do %>
			        <%= attachment_image_tag fav.user, :profile_image, :fill, 40, 40, class: "rounded-circle", fallback: "no_icon.png", size: "40x40" %><br>
			        <span class="user_name"><%= fav.user.name %></span>
			      <% end %>
			    </td>
		  	  	<td>
		  	  	  <%= link_to game_path(fav), class: "text-info" do %>
		  	  	    <%= fav.title %>
		  	  	  <% end %>
		  	  	</td>
		  	  	<td>
				  <%= fav.favorites.count %>
				</td>
				<td>
				  <%= fav.comments.count %>
		  	  	</td>
		  	  </tr>
		  	<% end %>
		  </tbody>
		</table>
	  </div>

	  <div class="comment">
	  	<h5 class="text-muted">コメント数</h5>
		<table class="table table-hover table-inverse">
		  <thead>
		    <tr>
		      <th>
		      	<i class="fas fa-crown"></i>
		      </th>
		      <th></th>
		      <th>投稿者</th>
		      <th>ゲーム名</th>
		      <th>
		      	<i class="far fa-comment-dots"></i>
		      </th>
		      <th>
		      	<i class="fas fa-heart" style="color: red;"></i>
		      </th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @cmt_rank.each.with_index(1) do |cmt, i| %>
		  	  <tr>
		  	  	<td>
	  	  	  	  <% case i %>
	  	  	  	  <% when 1 %>
	  	  	  	    <div class="first_place">
	  	  	  	      <i class="fas fa-crown"></i><br>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 2 %>
	  	  	  	    <div class="second_place">
	  	  	  	      <i class="fas fa-crown"></i><br>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% when 3 %>
	  	  	  	    <div class="third_place">
	  	  	  	      <i class="fas fa-crown"></i><br>
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% else %>
	  	  	  	    <div class="text-muted">
	  	  	  	      <%= i %>
	  	  	  	    </div>
	  	  	  	  <% end %>
		  	  	</td>
		  	  	<td>
		  	  	  <%= attachment_image_tag cmt, :main_image, :fit, 180, 135, fallback: "no_image.png", size: "180x135" %>
		  	  	</td>
			    <td>
			  	  <%= link_to user_path(cmt.user), class: "text-info" do %>
			        <%= attachment_image_tag cmt.user, :profile_image, :fill, 40, 40, class: "rounded-circle", fallback: "no_icon.png", size: "40x40" %><br>
			        <span class="user_name"><%= cmt.user.name %></span>
			      <% end %>
			    </td>
		  	  	<td>
		  	  	  <%= link_to game_path(cmt), class: "text-info" do %>
		  	  	    <%= cmt.title %>
		  	  	  <% end %>
		  	  	</td>
		  	  	<td>
				  <%= cmt.comments.count %>
				</td>
				<td>
				  <%= cmt.favorites.count %>
		  	  	</td>
		  	  </tr>
		  	<% end %>
		  </tbody>
		</table>
	  </div>
	</div>

</div>