<div id="wrapper">
  <%= link_to "ゲーム一覧に戻る", games_path, class: "fas fa-angle-double-left text-info" %>

  <% if @game.user == current_user %>
  <div class="row">
    <div class="col-3 my-2">
      <%= link_to "編集", edit_game_path(@game), class: "btn btn-outline-info form-control" %>
    </div>
  </div>
  <% end %>



  <h5 class="float-right">
    <%= link_to user_path(@game.user), class: "text-info" do %>
      <%= attachment_image_tag @game.user, :profile_image, :fill, 50, 50, class: "rounded-circle", fallback: "no_icon.png", size: "50x50" %>
      <%= @game.user.name %>
    <% end %>
    <a id="favorite_<%= @game.id %>">
      <%= render "favorites/favorite", game: @game %>
    </a>
    <i class="far fa-comment-dots ml-1" id="open_nav">
      <%= @game.comments.count %>
    </i>
  </h5>

  <div>
  <%= attachment_image_tag @game, :main_image, :fit, 240, 180, fallback: "no_image.png", size: "280x210" %>
  </div>

  <h5>ゲーム名</h5>
  <%= @game.title %>

  <h5>カテゴリー</h5>
  <%= @game.category.name %>

  <h5>プレイ人数</h5>
  <%= @game.player %>

  <h5>プレイ時間</h5>
  <%= @game.playing_time %>

  <h5>推奨年齢</h5>
  <%= @game.level %>

  <h5>ゲーム説明</h5>
  <%= @game.content %>

  <% @game.game_rules.each do |rule| %>
  <div class="col-3 m-2">
    <%= attachment_image_tag rule, :image, :fit, 240, 180, fallback: "no_image.png", size: "240x180" %>
  </div>
    <%= rule.text %>
  <% end %>
</div>

<nav id="nav">
  <h5>コメント</h5>
  <%= render "comments/form", game: @game, comment: @comment %>
  <%= render "comments/index", comments: @comments %>
</nav>