<header>
  <%= link_to root_path, class: "ml-4 mb-1 pl-4" do %>
    <%= image_tag "ur_game.png", :width => "220", :height => "55" %>
  <% end %>

  <div class="float float-right mr-5 mt-3">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <span class="badge badge-info">管理者</span>
      <% end %>
      <%= link_to edit_user_path(current_user), class: "mr-2 text-muted" do %>
        <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, class: "rounded-circle", fallback: "no_icon.png", size: "40x40" %>
        <%= current_user.name %><%= "さん" %>
      <% end %>

      <%= link_to new_game_path, class: "text-muted" do %>
        <h4 class="far fa-edit"></h4>
        <%= "投稿する" %>
      <% end %>

      <%= link_to notifications_path, class: "text-muted mr-2" do %>
        <% if unchecked_notifications.any? %>
          <h4 class="fas fa-bell" style="color: #FFB405;"></h4>
          <%= "通知あり" %>
        <% else %>
          <h4 class="far fa-bell"></h4>
          <%= "通知なし" %>
        <% end %>
      <% end %>
    <% end %>

    <div class="float float-right mt-1">
      <%= form_tag(games_path, method: :get) do %>
        <%= text_field_tag :search, "", placeholder: "ゲーム名" %>
        <%= submit_tag "検索", title: nil %>
      <% end %>
    </div>
  </div>

  <ul class="nav nav-pills nav-fill header-line">
    <% if user_signed_in? %>
      <li class="nav-item">
        <i class="fas fa-dice-one"></i>
        <%= link_to "サービス", about_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-two"></i>
        <%= link_to "ゲーム", games_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-three"></i>
        <%= link_to "ランキング", ranking_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-four"></i>
        <%= link_to "マイページ", user_path(current_user), class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-five"></i>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-muted" %>
      </li>
    <% else %>
      <li class="nav-item">
        <i class="fas fa-dice-one"></i>
        <%= link_to "サービス", about_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-two"></i>
        <%= link_to "ゲーム", games_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-three"></i>
        <%= link_to "ランキング", ranking_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-four"></i>
        <%= link_to "ログイン", new_user_session_path, class: "mr-4 text-muted" %>
      </li>
      <li class="nav-item">
        <i class="fas fa-dice-five"></i>
        <%= link_to "サインアップ", new_user_registration_path, class: "text-muted" %>
      </li>
    <% end %>
  </ul>
  <div class="header-bottom"></div>
</header>