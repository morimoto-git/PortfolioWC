<div class="body">
  <div class="container mt-3">
	<div class="row">
	  <div class="col-4 mx-auto">

		<% if @category.errors.any? %>
		<div id="error_explanation">
		  <ul>
		    <% @category.errors.full_messages.each do |message| %>
		    <li>
		      <%= message %>
		    </li>
		    <% end %>
		  </ul>
		</div>
		<% end %>

	    <%= form_for(@category) do |f| %>
	      <h4 class="mt-3">カテゴリー名変更</h4>
	      <%= f.text_field :name , class: "form-control my-3" %>
	      <%= f.submit "保存する", class: "form-control btn btn-success mb-2" %>
	    <% end %>
	    <%= link_to "一覧に戻る", categories_path, class: "fas fa-angle-double-left text-info" %>

	  </div>
	</div>
  </div>
</div>