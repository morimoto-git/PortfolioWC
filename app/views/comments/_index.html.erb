<% comments.each do |comment| %>
<div class="border mb-2" style="background-color: white;">

  <div class="m-2">
    <%= link_to user_path(comment.user_id), class: "text-info" do %>
      <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, class: "rounded-circle", fallback: "no_icon.png", size: "50x50" %>
      <%= comment.user.name %>
    <% end %>
    <a class="float-right">
      <%= comment.created_at.strftime("%Y/%m/%d %H:%M") %>
    </a>
  </div>

  <div class="m-2">
    <i class="fas fa-angle-right"> <%= comment.content %></i>
  </div>

  <% if comment.user == current_user %>
    <div class="text-right">
      <%= link_to game_comments_path(comment), method: :delete do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  <% end %>

</div>
<% end %>