<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>投稿数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% users.each do |users| %>
    <tr>
      <td><%= users.id %></td>
      <td class="py-2">
      	<%= link_to user_path(users), class: "text-info" do %>
      	  <%= attachment_image_tag users, :profile_image, :fill, 40, 40, class: "rounded-circle", fallback: "no_icon.png", size: "40x40" %>
      	  <%= users.name %>
      	<% end %>
      </td>
      <td><%= users.games.count %></td>
      <td>
	  <% if users != current_user %>
        <% if current_user.following?(users) %>
          <%= link_to 'フォロー解除', unfollow_path(users.id), method: :POST, class: "btn btn-danger" %>
        <% else %>
          <%= link_to 'フォローする', follow_path(users.id), method: :POST, class: "btn btn-primary" %>
        <% end %>
      <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>